<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RTA.XamlPages.RandomizerPage"
             Title="RandomizerPage"
             BackgroundColor="#272537">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Text="{Binding TaskDesc}"
            HorizontalTextAlignment="Center"
            FontSize="40"
            TextColor="FloralWhite"
            VerticalOptions="Center"
            FontAttributes="Bold"
            />
        <ImageButton
            Grid.Row="1"
            Source="random.png"
            Command="{Binding RandomizeTaskCommand}"
            BackgroundColor="#FFE8B6"
            HeightRequest="170"
            Padding="20"
            Aspect="AspectFit"
            CornerRadius="15"
            Margin="10"
            >
            
            
        </ImageButton>

    </Grid>
</ContentPage>