<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="RTA.XamlPages.TaskPopup"
             CanBeDismissedByTappingOutsideOfPopup="False"
           Size="250,350"
             >
    <VerticalStackLayout Margin="10" Spacing="15">
        <Label Text="Desciption" FontSize="16"/>
        <Entry Text="{Binding TaskDesc}" Placeholder="Task description"/>
        <BoxView HeightRequest="0.8" Color="DarkSlateGrey"/>

        <Button Text="Save" Command="{Binding AddUpdateTaskCommand}"/>
    </VerticalStackLayout>
</mct:Popup>