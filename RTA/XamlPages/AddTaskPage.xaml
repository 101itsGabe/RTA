<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RTA.XamlPages.AddTaskPage"
             Title="AddTaskPage">
    <VerticalStackLayout Margin="10" Spacing="15">
        <Label Text="Desciption" FontSize="16"/>
        <Entry Text="{Binding TaskDesc}" Placeholder="Task description"/>
        <BoxView HeightRequest="0.8" Color="DarkSlateGrey"/>

        <Button Text="Save" Command="{Binding AddUpdateTaskCommand}"/>
    </VerticalStackLayout>
</ContentPage>